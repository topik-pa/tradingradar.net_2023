extends ../layout.pug

block append meta
  title #{title} | #{proj_name}
  meta(name="description" content="Pagina Contatti")
  meta(name="keywords" content="contatti")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="website")
  meta(name="og:title" content=title + " | " + proj_name)
  meta(name="og:site_name" content=proj_name)
  meta(name="og:description" content="Pagina Contatti")
  meta(name="og:image" content="")

block main
  section
    h1 Contatti
    p E' possibile contattarci per domande, informazioni o altre necessit√† attraverso i seguenti canali.
    h2 Tramite email
    p E' possibile raggiungerci a questo indirizzo: 
      a(href="mailto:info@tradingradar.net") info@tradingradar.net
    h2 Tramite Social
    p E' possibile comunicare con noi attraverso i canali social seguenti:
    div(id="socials-contacts")
      each social in socials
        a(href=social.url, title=social.name)
          i(class=social.icon)
