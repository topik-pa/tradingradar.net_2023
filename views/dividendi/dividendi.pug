extends ../layout.pug

block append meta
  title #{title} | #{proj_name}
  meta(name="description" content="Data e valore dei Dividendi delle principali Azioni Italiane")
  meta(name="keywords" content="dividendi, data, valore, azioni, italia, stacco, cedola")
  link(rel="canonical", href=proj_url + url)

  meta(name="og:url" content=proj_url + url)
  meta(name="og:type" content="website")
  meta(name="og:title" content=title + " | " + proj_name)
  meta(name="og:site_name" content=proj_name)
  meta(name="og:description" content="Data e valore dei Dividendi delle principali Azioni Italiane")
  meta(name="og:image" content="")

block main
  div(id="dividens")
    h1 Data e valore dei Dividendi
    div(class="list-wrapper")
      div(id="dividend-yield") 
        h3 I valori dei dividendi #[em in rapporto al prezzo]
        p Lista dei dividendi ordinata per valore in rapporto al prezzo di listino del Titolo
        ul(class="trlist rank yield")
        p(class="source") Fonte: #[em(class="img_icon milano-finanza") Milano Finanza]
        p(class="detection") Rilevamento: #[em ]
      div(id="dividend-date")
        h3 Prossime date di Stacco della Cedola
        p La lista ordinata delle date di stacco del Dividendo 
        ul(class="trlist date")
        p(class="source") Fonte: #[em(class="img_icon milano-finanza") Milano Finanza]
        p(class="detection") Rilevamento: #[em ]
      div(class="social")
        div(class="fb-like" data-href="https://tradingradar.net/dividendi" data-width="" data-layout="button" data-action="like" data-size="large" data-share="true")
        div(class="t-share")
          script(async, src="https://telegram.org/js/telegram-widget.js?22", data-telegram-share-url="https://tradingradar.net/dividendi", data-size="large")
        div(class="fb-comments", data-href="https://tradingradar.net/dividendi", data-width="100%", data-mobile="true", data-numposts="5")
  